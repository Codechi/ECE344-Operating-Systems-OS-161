void
getinterval(time_t s1, u_int32_t ns1, time_t s2, u_int32_t ns2,
	    time_t *rs, u_int32_t *rns)
{
	if (ns2 < ns1) {
		ns2 += 1000000000;
		s2--;
	}

	*rns = ns2 - ns1;
	*rs = s2 - s1;
}

